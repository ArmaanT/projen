{
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\".",
  "name": "projen",
  "description": "A new generation of project generators",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/eladb/projen.git"
  },
  "bin": {
    "projen": "bin/projen"
  },
  "scripts": {
    "projen": "node .projenrc.js && yarn install",
    "no-changes": "(git log --oneline -1 | grep -q \"chore(release):\") && echo \"No changes to release.\"",
    "bump": "yarn --silent no-changes || standard-version",
    "release": "yarn --silent no-changes || (yarn bump && git push --follow-tags origin master)",
    "projen:upgrade": "chmod +w package.json && yarn upgrade -L projen && chmod -w package.json && yarn projen",
    "bootstrap": "yarn install && yarn compile && yarn projen",
    "compile": "jsii --silence-warnings=reserved-word && jsii-docgen",
    "watch": "jsii -w --silence-warnings=reserved-word",
    "package": "jsii-pacmak",
    "build": "yarn compile && yarn test && yarn run package",
    "eslint": "eslint . --ext .ts",
    "test": "yarn eslint && jest --passWithNoTests --updateSnapshot",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "compat": "npx jsii-diff npm:$(node -p \"require('./package.json').name\") -k --ignore-file .compatignore || (echo \"\nUNEXPECTED BREAKING CHANGES: add keys such as 'removed:constructs.Node.of' to .compatignore to skip.\n\" && exit 1)",
    "docgen": "jsii-docgen"
  },
  "author": {
    "name": "Elad Ben-Israel",
    "email": "benisrae@amazon.com",
    "organization": false
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.10",
    "@types/node": "^10.17.28",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.4.2",
    "jsii": "^1.11.0",
    "jsii-diff": "^1.11.0",
    "jsii-docgen": "^1.4.23",
    "jsii-pacmak": "^1.11.0",
    "jsii-release": "^0.1.9",
    "json-schema": "^0.2.5",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {},
  "dependencies": {
    "decamelize": "^4.0.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "yaml": "^1.10.0",
    "yargs": "^15.4.1"
  },
  "bundledDependencies": [
    "yaml",
    "fs-extra",
    "yargs",
    "decamelize",
    "glob"
  ],
  "engines": {
    "node": ">= 10.17.0"
  },
  "license": "Apache-2.0",
  "version": "0.3.41",
  "types": "lib/index.d.ts",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    }
  },
  "stability": "experimental",
  "jsii": {
    "outdir": "dist",
    "targets": {},
    "tsc": {
      "outDir": "lib",
      "rootDir": "src"
    }
  }
}
